<style>
/* Social Section */
.social-section {
    padding: 80px 20px;
    max-width: 900px;
    margin: 0 auto;
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
}

.social-section.visible {
    opacity: 1;
    transform: translateY(0);
}

.section-header {
    margin-bottom: 40px;
    text-align: center;
}

.section-title {
    font-family: var(--font-display);
    font-size: 28px;
    font-weight: 700;
    letter-spacing: 6px;
    color: var(--text-primary);
    display: inline-flex;
    align-items: center;
    gap: 16px;
    padding: 16px 32px;
    background: rgba(212, 175, 55, 0.08);
    border: 1px solid rgba(212, 175, 55, 0.2);
    border-radius: 10px;
}

.title-icon {
    font-size: 28px;
}

.social-content {
    display: flex;
    justify-content: center;
}

.social-links {
    display: flex;
    gap: 30px;
    flex-wrap: wrap;
    justify-content: center;
}

.social-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    padding: 30px 40px;
    background: var(--bg-card);
    border: 1px solid rgba(212, 175, 55, 0.2);
    border-radius: 16px;
    text-decoration: none;
    transition: all 0.4s var(--transition-smooth);
    backdrop-filter: blur(10px);
}

.social-link:hover {
    transform: translateY(-10px) scale(1.05);
    border-color: var(--gold-primary);
    box-shadow: 0 20px 50px rgba(212, 175, 55, 0.3);
}

.social-link[data-platform="github"]:hover {
    border-color: #ffffff;
    box-shadow: 0 20px 50px rgba(255, 255, 255, 0.2);
}

.social-link[data-platform="linkedin"]:hover {
    border-color: #0077b5;
    box-shadow: 0 20px 50px rgba(0, 119, 181, 0.3);
}

.social-icon {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-primary);
    transition: all 0.3s ease;
}

.social-icon svg {
    width: 100%;
    height: 100%;
}

.social-link:hover .social-icon {
    transform: scale(1.2);
}

.social-link[data-platform="github"]:hover .social-icon {
    color: #ffffff;
}

.social-link[data-platform="linkedin"]:hover .social-icon {
    color: #0077b5;
}

.social-label {
    font-family: var(--font-display);
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 3px;
    color: var(--text-secondary);
    transition: color 0.3s ease;
}

.social-link:hover .social-label {
    color: var(--text-primary);
}

@media (max-width: 768px) {
    .social-link {
        padding: 25px 35px;
    }
    
    .social-icon {
        width: 40px;
        height: 40px;
    }
}
</style>

<script>
// Scroll animation for social section
document.addEventListener('DOMContentLoaded', () => {
    const socialSection = document.querySelector('.social-section');
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');
            }
        });
    }, { threshold: 0.2 });

    if (socialSection) {
        observer.observe(socialSection);
    }
});
</script>
