---
import Layout from '../layouts/Layout.astro';
import App from '../components/App';
import About from '../components/sections/About.astro';
import Skills from '../components/sections/Skills.astro';
import Social from '../components/sections/Social.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Crisp | Full Stack Developer - FIFA Style Portfolio">
    <!-- React App with client-side hydration -->
    <App client:load />
    
    <!-- Static sections rendered server-side (hidden initially, shown after transition) -->
    <div class="static-sections" id="staticSections">
        <About />
        <Skills />
        <Social />
        <Footer />
    </div>
</Layout>

<style is:global>
    .static-sections {
        display: none;
    }
    
    .static-sections.visible {
        display: block;
    }
</style>
